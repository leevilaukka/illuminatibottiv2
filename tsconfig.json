{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "build",  
    "removeComments": true,
    "declaration": false,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "paths": {
      "*" : ["./src/types/*"]
    }
  },  
  "include": ["./src/**/**/*"],
  "exclude": ["./node_modules/**", "src/@types/**"],
}