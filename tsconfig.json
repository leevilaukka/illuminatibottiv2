{
    "compilerOptions": {
        "allowJs": true,
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "esnext",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "build",
        "removeComments": true,
        "declaration": false,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "noImplicitThis": true,
        "paths": {
            "*": ["./src/types/*"]
        },
        "types": ["node"],
        "typeRoots": ["node_modules/@types"]
    },
    "include": ["./src/**/**/*"],
    "exclude": ["./node_modules/**", "src/@types/**"]
}
